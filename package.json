{
	"name": "mocha-ts-tests",
	"version": "1.0.0",
	"scripts": {
		"build": "tsc",
		"test": "mocha --require ts-node/register --watch-extensions ts test/**/*.spec.ts",
		"test:min": "npm run test -- --reporter min",
		"test:watch": "npm run test -- --watch",
		"test:min:watch": "npm run test:min -- --watch"
	},
	"devDependencies": {
		"@types/chai": "^4.2.5",
		"@types/mocha": "^5.2.7",
		"chai": "^4.2.0",
		"mocha": "^6.2.2",
		"ts-node": "^8.5.2",
		"typescript": "^3.7.2"
	}
}
